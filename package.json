  "keywords": [
    "ESPHome",
    "ESP",
    "ESP32"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DrozmotiX/ioBroker.esphome"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.5.1",
    "@sentry/node": "^5.30.0",
    "@2colors/esphome-native-api": "^1.0.7",
    "nopy": "^0.2.7",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^1.10.0",
    "@iobroker/testing": "^2.4.2",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/gulp": "^4.0.9",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.17.11",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "axios": "^0.21.1",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "gulp": "^4.0.2",
    "mocha": "^8.4.0",
    "promisify": "0.0.3",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.7.0",
    "typescript": "^4.3.5"
  },
  "main": "main.js",
  "scripts": {
    "release": "release-script",
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint",
    "install": "npip install",
    "nopy": "nopy",
    "npip": "npip",
    "dashboard": "npm run -s nopy ./python_modules/bin/esphome config/ dashboard"
  },
  "python": {
    "execPath": [
      "python3.8",
      "python3.7",
      "python3",
      "python"
    ],
    "path": [
      "."
    ],
    "dependencies": {
      "esphome": ">=2021.8",
      "tornado": ">=3.2"
    }
  },
  "bugs": {
    "url": "https://github.com/DrozmotiX/ioBroker.esphome/issues"
  },
  "readmeFilename": "README.md"
